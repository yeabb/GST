<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_theme"
    tools:context=".GasStationDetailsExpand">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- ImageView on the left -->
        <ImageView
            android:id="@+id/ivGasStationIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="Gas Station Icon"
            android:src="@drawable/ic_gas" />

        <!-- Gas Station Name TextView -->
        <TextView
            android:id="@+id/tvStationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="3dp"
            android:text="Gas Station Name"
            android:textSize="30sp"
            android:textColor="#FF000000"
            android:textStyle="bold" />


    </LinearLayout>

    <Button
        android:id="@+id/btToGoogleMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="10dp"
        android:background="@drawable/button_background"
        android:paddingStart="16dp"
        android:paddingEnd="10dp"
        android:text="Direction"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        style="@style/custom_card_view_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        style="@style/custom_card_view_style"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/insideConstraint"
            android:layout_width="match_parent"
            android:layout_height="513dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="0dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvFirstInsideCardView"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="@id/insideConstraint"
                app:layout_constraintStart_toStartOf="@id/insideConstraint"
                app:layout_constraintTop_toTopOf="@id/insideConstraint">

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">


                    <TextView
                        android:id="@+id/tvCustomerCarsServed"
                        android:layout_width="wrap_content"
                        android:layout_height="75dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="20"
                        android:textColor="#009dff"
                        android:textSize="60sp"
                        android:textStyle="bold" />
                    <!--                        android:background="@drawable/circular_background"/>-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="75dp"
                        android:layout_marginStart="5dp"
                        android:text="cars are being served at the gas station"
                        android:textSize="18sp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cvSecondInsideCardView"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="@id/insideConstraint"
                app:layout_constraintStart_toStartOf="@id/insideConstraint"
                app:layout_constraintTop_toBottomOf="@+id/cvFirstInsideCardView">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <EditText
                        android:id="@+id/etNumberOfCars"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_background"
                        android:drawablePadding="8dp"
                        android:gravity="center"
                        android:hint="Enter Number of Cars"
                        android:inputType="number"
                        android:padding="16dp"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                    <!-- Submit Button -->
                    <Button
                        android:id="@+id/btReport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/button_background"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="Submit"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
