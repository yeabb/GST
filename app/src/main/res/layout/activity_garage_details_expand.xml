<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="16dp">

    <!-- Gas Station Icon -->
    <ImageView
        android:id="@+id/ivGarageIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:contentDescription="Garage Icon"
        android:src="@drawable/ic_garage2"/>

    <!-- Gas Station Name -->
    <TextView
        android:id="@+id/tvGarageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Garage Name"
        android:textSize="28sp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <!-- Get Directions Button -->
    <Button
        android:id="@+id/btGarageToGoogleMap"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Get Directions"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:elevation="4dp"
        android:stateListAnimator="@null"
        android:layout_marginTop="16dp" />

    <!-- Separator Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ECECEC"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="30dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#F5F5F5">

        <!-- Card Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Number of Cars Served (Prominent) -->
            <TextView
                android:id="@+id/tvGarageQueueLengthInExpanded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textSize="60sp"
                android:textStyle="bold"
                android:textColor="@color/lavender"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal" />

            <!-- Cars Served Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cars are in line at the garage"
                android:textSize="20sp"
                android:textColor="#333333"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>
