<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="16dp">

    <!-- Gas Station Icon -->
    <ImageView
        android:id="@+id/ivCarBuyIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:contentDescription="Car Buy Icon"
        android:src="@drawable/ic_car2"/>

    <!-- Gas Station Name -->
    <TextView
        android:id="@+id/tvCarMake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Gas Station Name"
        android:textSize="28sp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <!-- Get Directions Button -->
    <Button
        android:id="@+id/btCarToGoogleMap"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Get Directions"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:elevation="4dp"
        android:stateListAnimator="@null"
        android:layout_marginTop="16dp" />

    <!-- Separator Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ECECEC"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="30dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#F5F5F5">

        <!-- Card Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Number of Cars Served (Prominent) -->
            <TextView
                android:id="@+id/tvGasStationQueueLengthInExpanded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textSize="60sp"
                android:textStyle="bold"
                android:textColor="@color/lavender"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal" />

            <!-- Cars Served Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cars are in line at the gas station"
                android:textSize="20sp"
                android:textColor="#333333"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Instruction Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please report the number of cars at the gas station and help others:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#666666"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal" />

    <!-- Number of Cars Input -->
    <EditText
        android:id="@+id/etNumberOfCars"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Enter Number of Cars"
        android:textSize="16sp"
        android:background="@drawable/edittext_background"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#333333"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btReport"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Report"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:elevation="4dp"
        android:stateListAnimator="@null"
        android:layout_marginTop="16dp" />


</LinearLayout>
